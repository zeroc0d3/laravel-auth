server {
    listen 80;
    server_name auth.zeroc0d3lab.com;

    # redirects both www and non-www to https
    return 301 https://$server_name$request_uri;
}

server {
    listen 443 ssl http2;

    # Log files for Debugging
    access_log /data/www/laravel-auth/production/shared/log/access.log;
    error_log /data/www/laravel-auth/production/shared/log/error.log;

    # Webroot Directory for Laravel project
    root /data/www/laravel-auth/production/current/src/public;
    index index.php index.html index.htm;

    # Your Domain Name
    server_name auth.zeroc0d3lab.com;

    location / {
        try_files $uri $uri/ /index.php?$query_string;
    }

    # PHP-FPM Configuration Nginx
    location ~ \.php$ {
        try_files $uri =404;
        fastcgi_split_path_info ^(.+\.php)(/.+)$;
        fastcgi_pass unix:/var/run/php/php7.2-fpm.sock;
        fastcgi_index index.php;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        include fastcgi_params;
    }

    ssl_certificate /etc/letsencrypt/live/auth.zeroc0d3lab.com/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/auth.zeroc0d3lab.com/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot
}
